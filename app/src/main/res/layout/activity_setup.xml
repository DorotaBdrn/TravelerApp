<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity"
    android:background="@drawable/background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile"

        />
    <EditText
        android:id="@+id/setup_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="264dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:background="@drawable/input"
        android:padding="14dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"/>


    <EditText
        android:id="@+id/setup_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input"
        android:padding="14dp"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:layout_below="@id/setup_username"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Fullname"
        android:inputType="textMultiLine" />



    <EditText
        android:id="@+id/setup_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_fullname"
        android:layout_marginTop="10dp"
        android:background="@drawable/input"
        android:padding="14dp"
        android:ems="10"
        android:gravity="start|top"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:hint="Country"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/setup_information_button"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@id/setup_country"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:padding="14dp"

        android:text="SAVE" />

</RelativeLayout>